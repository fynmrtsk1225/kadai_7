<h1>確認画面</h1>
<%= form_with(model:@picture, url:confirm_new_or_edit, method: confirm_form_method, local: true) do |form| %>
  <p>内容：<%= @picture.content %></p>
  <%= form.hidden_field :content %>

  <p>画像</p>
  <% image_tag(@picture.image.url) if @picture.image && @picture.image.url %>
  <%= image_tag @picture.image.url, class:'show_image' %><br>
  <%= form.hidden_field :image_cache %>
  <table>
    <tr>
      <td><%= form.submit "投稿する" %></td>
      <td><%= form.submit "戻る", name: "back" %></td>
    </tr>
  </table>
<% end %>