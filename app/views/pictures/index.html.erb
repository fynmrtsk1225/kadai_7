<p id="notice"><%= notice %></p>


  <tbody>
    <% @pictures.each do |picture| %>
      <tr>
        <td>投稿者：<%= link_to "#{picture.user.name}", user_path(picture.user.id) %></td><br>
        <td>内容：<%= picture.content %></td><br>
        <td><%= image_tag picture.image.url, class:'show_image' %></td><br>
        <td><%= link_to 'Show', picture %></td>
        <td><%= link_to 'Edit', edit_picture_path(picture) %></td>
        <td><%= link_to 'Destroy', picture, method: :delete, data: { confirm: 'Are you sure?' } %></td><br><br>
      </tr>
    <% end %>
  </tbody>

